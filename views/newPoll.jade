extends sidebar
block div#content
  div#divInformation
    h1=title
    form(action="/polls/createPoll",method="post")
      table(class = "table table-striped table-bordered table-hover")
        tbody
          tr
            td
              label
                | Page
            td
              select(name='pages' class='form-control')
                option(value='') Select Page
                if (pages.length != 0)
                - each object in pages
                    option(value='#{object_id}') #{object.name}
            td
              label
                | Gender
            td
              select(name='gender' class='form-control')
                option(value='') Select Gender
                option(value='female') female
                option(value='male') male
                option(value='other') other
            td
              label
                | Locale
            td
              select(name='locale' class='form-control')
                option(value="") Select Locale
                option(value="en_US") en_US
                option(value="af_ZA") af_ZA
                option(value="ar_AR") ar_AR
                option(value="az_AZ") az_AZ
                option(value="pa_IN") pa_IN
          tr
            td
              label
                | Ask Something
            td(colspan = 5)
              textarea(name ="reply"  class="form-control input-medium input-inline" required)
          tr
            td
              label
                | Add Responses(separated with commas)
            td(colspan = 8)
              input(type="text" name ="responseOne"  class="form-control input-medium input-inline" placeholder="Response 1" required)
              br
              input(type="text" name ="responseTwo"  class="form-control input-medium input-inline" placeholder="Response 2" required)
              br
              input(type="text" name ="responseThree"  class="form-control input-medium input-inline" placeholder="Response 3" required)

          tr
            td(colspan="8")
                           button(class = "btn btn-info" type="submit")
                              | Submit
