extends sidebar
block div#content
  div#divInformation
    h1= title
    div(class = "control-group span6")
      label
        | Search :

      input(type="search" class="light-table-filter form-control input-medium input-inline" data-table="userInfo" placeholder="Enter search term")
    div#divDatadiv.table-scrollable
      table(class = "table table-striped table-bordered table-hover userInfo")
        thead
          tr
            td
              span
                |Id
            td
              span
                |Name
            td
              span
                |Email
            td
              span
                |Locale
            td
              span
                |Gender
            td
              span
                |Created At
            td
              span
                |Super User

        tbody
          form(action="/downloadcsv",method="post")
             - var dd=JSON.stringify(mydata)
              input(type="hidden" name ="dd" value = dd)

              if (mydata.length != 0)
                - each object in mydata
                    tr
                      td=object._id
                      td=object.name
                      td=object.email
                      td=object.locale
                      td=object.gender
                      td=object.createdAt
                      td=object.isSuperUser
                tr
                  td(colspan = 8,style = "text-align:right;")
                    button(class = "downloadcsv btn btn-info" type="submit")
                        |Export Record in CSV
              else
                tr
                  td(colspan = 8,style = "text-align:center;")="No user record found. " + error.description
