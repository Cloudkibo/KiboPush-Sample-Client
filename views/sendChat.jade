extends sidebar
block div#content
  div#divInformation
    h1
      | Send Message
    form(action="/chat/sendMessage", method="post")
      table(class = "table table-striped table-bordered table-hover")
        tbody
          tr
            td(style="width:400px")
              label
                | Page
            td
              select(name='pages' class='form-control')
                if (pages.length != 0)
                - each object in pages
                    option(value='#{object.id}') #{object.name}        
          tr
            td
              label
                | SubscriberId
            td
              input(name ="subscriberId"  class="form-control input-medium input-inline")
          tr
            td
              label
                | RefId
            td
              input(name ="refId"  class="form-control input-medium input-inline" )      
          tr
            td
              label
                | Text
            td
              textarea(name ="text"  class="form-control input-medium input-inline" required)
          tr
            td
            td
             button(name="subscriberIdButton" class = "btn btn-info" type="submit")
                | Send Message Using SubscriberId &nbsp;
             |  
             button(name="refIdButton" class = "btn btn-info" type="submit")
                | Send Message Using RefId                  
