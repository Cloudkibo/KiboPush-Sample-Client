extends sidebar
block div#content
  div#divInformation
    h1
      | Send Broadcast
    form(action="/broadcasts/sendBroadcast",method="post")
      table(class = "table table-striped table-bordered table-hover")
        tbody
          tr
            td
              label
                | Title
            td(colspan = 5)
              input(name ="broadcastTitle"  class="form-control input-medium input-inline" required value=title)
          tr
            td(style= 'width: 400px')
              label
                | Page
              select(name='pages' class='form-control')
                if (pages.length != 0)
                - each object in pages
                    option(value='#{object.id}') #{object.name}
            td(style= 'width: 400px')
              label
                | Gender
              select(name='gender' class='form-control')
                option(value='all') All
                option(value='female') Female
                option(value='male') Male
                
          tr
            td
              label
                | Text
            td(colspan = 5)
              textarea(name ="text"  class="form-control input-medium input-inline" required)
          tr
            td(colspan="8")
                           button(class = "btn btn-info" type="submit")
                              | Send Broadcast
