extends sidebar
block div#content
  div#divInformation
    h1=title
    form(action="/broadcasts/sendBroadcast",method="post")
      table(class = "table table-striped table-bordered table-hover")
        tbody
          tr
            td(style= 'width: 400px')
              label
                | Page
              select(name='pages' class='form-control' multiple)
                if (pages.length != 0)
                - each object in pages
                    option(value='#{object.id}') #{object.name}
            td(style= 'width: 400px')
              label
                | Gender
              select(name='gender' class='form-control' multiple)
                option(value='female') female
                option(value='male') male
                option(value='other') other
            td(style= 'width: 400px')
              label
                | Locale
              select(name='locale' class='form-control' multiple)
                option(value="en_US") en_US
                option(value="af_ZA") af_ZA
                option(value="ar_AR") ar_AR
                option(value="az_AZ") az_AZ
                option(value="pa_IN") pa_IN
          tr
            td
              label
                | text
            td(colspan = 5)
              textarea(name ="text"  class="form-control input-medium input-inline" required)
          tr
            td(colspan="8")
                           button(class = "btn btn-info" type="submit")
                              | Send Broadcast
