extends sidebar
block div#content
  div#main
    h1 Welcome to KiboPush Sample Client Application for calling API
    div#divCredential
      h3 Enter your credentials
      form(action="/",method="post")
        table(class = "table table-striped table-bordered table-hover")
          tbody
            tr
              td
                label
                  | kibo-app-id
              td
                input(type="text" name ="kiboappid"     class="form-control input-medium input-inline" placeholder ="Enter kibo-app-id" required)

            tr
              td
                label
                  | kibo-app-secret
              td
                input(type="text" name ="kiboappsecret"  class="form-control input-medium input-inline" placeholder="Enter kibo-app-secret " required)
            tr
              td(colspan="2")
                             button(class = "btn btn-info" type="submit")
                                | Submit

    if(typeof credentials != 'undefined')
        div#successMessage
          h3 Credentials saved for this session
